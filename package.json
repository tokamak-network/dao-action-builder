{
  "name": "dao-action-builder-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:run": "pnpm -r test:run",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "release": "./scripts/publish.sh -t patch",
    "release:patch": "./scripts/publish.sh -t patch",
    "release:minor": "./scripts/publish.sh -t minor",
    "release:major": "./scripts/publish.sh -t major",
    "release:dry": "./scripts/publish.sh --dry-run"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
